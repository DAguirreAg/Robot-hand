<robot name="pi_robot">

	<!-- * * * Link Definitions * * * -->
	
 	<link name="finger1">
		<visual>
		    <origin xyz="0 0 0.0225" rpy="0 0 0"/>
			<geometry>
				<box size="0.02 0.02 0.045"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>
	
	<link name="finger2">
		<visual>
		    <origin xyz="0 0 0.0125" rpy="0 0 0"/>
			<geometry>
				<box size="0.02 0.02 0.025"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>
	
	<link name="finger3">
		<visual>
		    <origin xyz="0 0 0.01" rpy="0 0 0"/>
			<geometry>
				<box size="0.02 0.02 0.02"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>

	<joint name="forearm_palm_joint" type="revolute">
    	<parent link="finger1"/>
    	<child link="finger2"/>
    	<origin xyz="0 0 0.045" rpy="0 0 0"/>
    	<axis xyz="0 1 0"/>
    	<limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  	</joint>
	
	<joint name="forearm_palm_joint" type="revolute">
    	<parent link="finger2"/>
    	<child link="finger3"/>
    	<origin xyz="0 0 0.02" rpy="0 0 0"/>
    	<axis xyz="0 1 0"/>
    	<limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  	</joint>


</robot>