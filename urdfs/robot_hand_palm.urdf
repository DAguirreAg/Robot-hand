<robot name="pi_robot">

	<!-- * * * Link Definitions * * * -->

 	<link name="forearm">
		<visual>
		    <origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.05 0.06 0.1"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>

 	<link name="palm">
		<visual>
		    <origin xyz="0 0 0.045" rpy="0 0 0"/>
			<geometry>
				<box size="0.03 0.09 0.09"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
		<visual>
		    <origin xyz="0 -0.04 0.035" rpy="0.785975 0 0"/>
			<geometry>
				<box size="0.03 0.04 0.05"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>
	
 	<link name="thumb1">
		<visual>
		    <origin xyz="0 0 0.0175" rpy="0 0 0"/>
			<geometry>
				<box size="0.02 0.02 0.035"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>
	
	<link name="thumb2">
		<visual>
		    <origin xyz="0 0 0.0175" rpy="0 0 0"/>
			<geometry>
				<box size="0.02 0.02 0.035"/>
			</geometry>
			<material name="Cyan1">
	       		<color rgba="0 0.9 0.9 1.0"/>
	     	</material>
		</visual>	
	</link>

	<joint name="forearm_palm_joint" type="revolute">
    	<parent link="forearm"/>
    	<child link="palm"/>
    	<origin xyz="0 0 0.05" rpy="0 0 0"/>
    	<axis xyz="0 1 0"/>
    	<limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  	</joint>

	<joint name="palm_thumb1_joint" type="revolute">
    	<parent link="palm"/>
    	<child link="thumb1"/>
    	<origin xyz="0 -0.06 0.06" rpy="0.785975 0 0"/>
    	<axis xyz="0 1 0"/>
    	<limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  	</joint>
		
	<joint name="palm_thumb2_joint" type="revolute">
    	<parent link="thumb1"/>
    	<child link="thumb2"/>
    	<origin xyz="0 0 0.035" rpy="0 0 0"/>
    	<axis xyz="0 1 0"/>
    	<limit lower="-3.1416" upper="3.1416" effort="10" velocity="3"/>
  	</joint>
 
</robot>